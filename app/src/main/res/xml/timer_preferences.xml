<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_sound"
        android:summaryOff="Sound Disabled"
        android:summaryOn="Sound Enabled"
        android:title="Enable Sound" />

    <ListPreference
        android:defaultValue="gong"
        android:key="sound_file"
        android:title="End Timer Melody"
        android:entries="@array/preference_timer_sound_file_label"
        android:entryValues="@array/preference_timer_sound_file_vals"/>
</PreferenceScreen>